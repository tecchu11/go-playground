    "version": "0.2.0",
    "configurations": [
        {
            "name": "LaunchAPI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/api",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "MigrationUp",
            "type": "go",
            "request": "launch",
            "args": ["up"],
            "mode": "auto",
            "program": "cmd/migration",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "MigrationDown",
            "type": "go",
            "request": "launch",
            "args": ["down"],
            "mode": "auto",
            "program": "cmd/migration",
            "envFile": "${workspaceFolder}/.env"
        },
    ]
}
