{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "timezone": "Asia/Tokyo",
  "labels": [
    "renovate"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.devcontainer/devcontainer.json"
      ],
      "matchStrings": [
        "\"version\":\\s*\"(?<currentValue>.*?)\" //RENOVATE_TERRAFORM"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hashicorp/terraform",
      "depTypeTemplate": "required_version"
    }
  ],
  "packageRules": [
    {
      "groupName": "golang-version",
      "matchManagers": [
        "dockerfile",
        "docker-compose",
        "gomod"
      ],
      "matchPackageNames": [
        "go",
        "golang"
      ]
    },
    {
      "groupName": "terraform-version",
      "matchManagers": [
        "custom.regex",
        "terraform"
      ],
      "matchPackageNames": [
        "hashicorp/terraform"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "ignoreDeps": [
    "mysql"
  ]
}
